{
    "name": "Bionic Reader Extension",
    "description": "A new concept called Bionic Reading aims to increase readability of text for humans. This extension converts text on-the-fly into Bionic Text.",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.technologyreview.com/*",
                "https://*.wired.com/*",
                "https://*.linkedin.com/*",
                "https://*.medium.com/*",
                "https://*.economist.com/*",
                "https://*.nytimes.com/*",
                "https://*.wsj.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}